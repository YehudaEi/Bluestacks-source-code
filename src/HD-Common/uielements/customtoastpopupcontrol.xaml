<UserControl x:Class="BlueStacks.Common.CustomToastPopupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Common="clr-namespace:BlueStacks.Common"
             DataContext="{Binding Source={x:Static Common:BlueStacksUIBinding.Instance}}">
  <Border x:Name="mToastPopupBorder" VerticalAlignment="Bottom" Margin="0,0,0,40"
          HorizontalAlignment="Center" Background="#AE000000" CornerRadius="12">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="5"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="5"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="15"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="15"/>
      </Grid.ColumnDefinitions>
      <Common:CustomPictureBox x:Name="mToastIcon" Grid.Column="1" Grid.Row="1" Height="auto" Width="auto"
                               HorizontalAlignment="Left" VerticalAlignment="Center" Visibility="Collapsed"/>
      <TextBlock x:Name="mToastTextblock" Grid.Column="2" Grid.Row="1" TextWrapping="WrapWithOverflow"
                 HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Foreground="White"
                 Text="text is cleared"/>
      <Grid x:Name="mVerticalSeparator" Visibility="Collapsed" Column="3" Row="1" Height="24" Margin="20,0,0,0"
            HorizontalAlignment="Right" VerticalAlignment="Center" Width="1"/>
      <Common:CustomPictureBox x:Name="mToastCloseIcon" MouseLeftButtonUp="ToastCloseIcon_MouseLeftButtonUp" Grid.Column="4"
                               Grid.Row="1" Margin="8,0,2,0" Height="12" Width="12" ImageName="close" HorizontalAlignment="Right"
                               VerticalAlignment="Center" Visibility="Collapsed"/>
    </Grid>
  </Border>
</UserControl>